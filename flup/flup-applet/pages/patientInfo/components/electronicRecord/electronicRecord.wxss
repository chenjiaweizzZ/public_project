.electronicRecord {
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  overflow-y: hidden;
}
.refresh {
  flex-shrink: 0;
  margin: 10px 0 0 10px;
  width: 120px;
  text-align: center;
  padding: 3px 0;
  color: #0079FD;
  box-sizing: border-box;
  border: 1px solid #0079FD;
  border-radius: 100px;
}
.recordList{
  padding: 0px 10px 10px 10px;
  color: #333;
  font-size: 14px;
  flex: 1;
  overflow-y: auto;
}
.recordList .recordItem{
  position: relative;
  padding: 14px 0;
  padding-left: 3.75%;
  background-size: 16px;
  overflow: hidden;
  margin-top: 16px;
  background: #fff;
  border-radius: 8px;
  /* box-shadow: 0px 1px 4px 0px rgba(26, 33, 44, 0.08); */
  box-shadow: 0px 5px 11px 0px rgba(0, 0, 0, 0.0844);
}
.recordList .date{
  color: #999;
  display: flex;
  padding-right: 10px;
}
.date .right{
  color: #666;
  text-align: right;
  flex: 1;
}
/* 无列表数据 */
.electronicRecord .nodata {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  /* align-items: center; */
  margin-top: 60px;
}
.nodata .nodata-img{
  width: 160px;
  height: 212px;
}