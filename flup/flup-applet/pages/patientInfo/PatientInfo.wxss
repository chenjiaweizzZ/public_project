/* pages/patientInfo/PatientInfo.wxss */
.patientInfo {
  width: 100vw;
  height: 100vh;
  background-color: #F6F6F6;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.navigatorbar {
  position: relative;
  top: 0;
  width: 750rpx;
  height: 172rpx;
  flex-shrink: 0;
  /* background: linear-gradient(149deg, #3BC56E 16%, #36B765 75%); */
  background: #fff;
}

.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.info {
  height: 44px;
  line-height: 44px;
  padding: 0 12px;
  display: flex;
  background: linear-gradient(277deg, #32AE57 1%, #46CD6E 96%);
  font-family: PingFang SC;
  font-size: 15px;
  font-weight: 500;
  text-align: right;
  letter-spacing: 0.2px;
  color: #FFFFFF;
}
.info .middle{
  margin: 0 14px;
}
.navigatorbar-back {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  left: 40rpx;
  bottom: 20rpx;
}

.conversation-title {
  position: absolute;
  width: 350rpx;
  height: 88rpx;
  line-height: 56rpx;
  font-size: 36rpx;
  color: #111;
  bottom: 0;
  left: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
}

/* tab */
.tab_box {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1px solid #f6f6f6;
  /* margin-bottom: 30rpx; */
}

.tabs_v {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.tab_v {
  width: 50%;
  text-align: center;
}

.tab_txt {
  border-bottom: 2px solid transparent;
  padding-bottom: 14px;
  color: #999999;
}

.tab_v_active {
  border-bottom: 2px solid #36B765;
  color: #36B765;
  font-weight: bold;
}

/* 容器 */
.tabWrap {
  flex: 1;
  width: 100%;
}

.main-content {
  display: flex;
  height: 100%;
}

.content {
  flex: 1;
  position: relative;
  /* background-color: pink; */
  background: #fff;
  overflow: hidden;
}
.content-container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow-y: scroll;
  background: #fff;
}
.content-container .addPlan{
 display: flex;
}
.content-container .addBtn{
  margin: 10px 0;
  text-align: center;
  line-height: 32px;
  height: 32px;
  border-radius: 23px;
  opacity: 1;
  background: #FFFFFF;
  box-sizing: border-box;
  border: 1px solid #32AE57;
  font-family: 苹方-简;
  font-size: 16px;
  font-weight: 500;
  text-align: center;
  letter-spacing: 0.19px;
  color: #00982D;
  margin: 10px 14px;
  width: 50%;
}
.content .baseInfo{
  padding: 10px 14px;
  background: #fff;
  font-family: PingFang SC;
  font-size: 14px;
  font-weight: normal;
  line-height: 19px;
  letter-spacing: 0.2px;
}
.content .infoItem{
  margin-top: 10px;
  display: flex;
}
.baseInfo .key{
  color: #999;
  min-width: 80px;
  display: inline-block;
}
.baseInfo .value{
  color: #333;
}
/* 无列表数据 */
.content .nodata {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  /* align-items: center; */
  margin-top: 60px;
}
.nodata .nodata-img{
  width: 160px;
  height: 212px;
}
.clinicList{
  background: #fff;
  padding: 16px 0;
}
.clinicList,.consultList,.orderList{
  padding: 10px;
  color: #333;
  font-size: 14px;
}
.clinicList .clinicItem{
  position: relative;
  padding: 14px 0;
  padding-left: 3.75%;
  background-size: 16px;
  overflow: hidden;
  margin-bottom: 16px;
  background: #fff;
  border-radius: 8px;
  /* box-shadow: 0px 1px 4px 0px rgba(26, 33, 44, 0.08); */
  box-shadow: 0px 5px 11px 0px rgba(0, 0, 0, 0.0844);
}
.consultList .clinicItem{
  position: relative;
  /* padding: 14px 0; */
  /* padding-left: 3.75%; */
  background-size: 16px;
  overflow: hidden;
  margin-top: 16px;
  /* background: #fff; */
  /* border-radius: 8px; */
  /* box-shadow: 0px 1px 4px 0px rgba(26, 33, 44, 0.08); */
}
.orderList {
  position: relative;
}
.orderList .line {
  position: absolute;
  position: absolute;
  content: "";
  width: 2rpx;
  background-color: #C6C9CE;
  left: 32rpx;
  z-index: 0;
}
.orderList .clinicItem{
  padding: 0;
}
.clinicItem .date{
  color: #999;
  display: flex;
  padding-right: 10px;
  font-size: 14px;
}
.package{
  padding: 14px;
  background: #f6f6f6;
  margin: 10px 0;
  border-radius: 4px;
  line-height: 24px;
}
.consult{
  display: flex;
}
.consult .left{
  width: 14px;
  margin-right: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.consult image{
  width: 14px;
  height: 14px;
}
.consult .left .line{
  height: 100%;
  width: 1px;
  background: #e2e2e2;
}
.consult .right{
  width: 100%;
}
.consultList .date{
  font-size: 12px;
}
.date .days{
  color: #666;
  text-align: right;
    flex: 1;
}
.van-sidebar-item--selected {
  border-color: #36B765 !important;
}

text {
  word-wrap: break-word;
}
