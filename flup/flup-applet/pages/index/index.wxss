.container {
  background: #F4F5F9;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.container .title {
  position: relative;
  width: 100vw;
  font-size: 18px;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 28px;
  font-weight: 600;
  background: #FFFFFF;
  margin-top: 3.8vh;
  padding: 1.2vh 0;
}

.tui-navigatorbar {
  position: relative;
  top: 0;
  width: 750rpx;
  height: 172rpx;
  flex-shrink: 0;
  background-color: #FFFFFF;
}

.conversation-title {
  position: absolute;
  width: 350rpx;
  height: 88rpx;
  line-height: 56rpx;
  font-size: 36rpx;
  color: #000000;
  bottom: 0;
  left: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
}

.container .search {
  flex: 1;
  width: 100vw;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 28px;
  font-weight: 600;
  background: #FFFFFF;
  padding: 1.2vh 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.list {
  font-size: 28rpx;
  font-weight: normal;
  cursor: pointer;
  margin: 10px 12px;
  padding: 14px 12px;
  border-radius: 6px;
  background: #FFFFFF;
}

.list .message-top {
  display: flex;
  justify-content: space-between;
}

.list .message-top .name {
  font-size: 16px;
  font-weight: 700;
  color: #111111;
}

.list .message-top .time {
  flex-grow: 0;
  flex-shrink: 0;
  font-size: 14px;
  color: #999999;
}

.list .message {
  text-align: left;
  font-size: 15px;
  font-weight: 700;
  margin-bottom: 5px;
  color: #111111;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list .message-bottom {
  position: relative;
  padding: 7px;
  color: #1D5833;
  border: 1px solid #8BAA96;
  margin-top: 8px;
  text-align: left;
}

.remainder {
  position: absolute;
  right: 0;
  bottom: 0;
  background: #F0A022;
  height: 20px;
  line-height: 20px;
  color: #FFFFFF;
  font-size: 12px;
  padding: 0 6px;
  border-top-left-radius: 14px;
}

/* tab */
.tab_box {
  height: 44px;
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.tabs_v {
  width: 100%;
  display: flex;
  flex-direction: row;
  cursor: pointer;
}

.tab_v {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.tab_txt {
  padding-bottom: 0;
  margin: 0;
  color: #999999;
}

.tab_v_active {
  position: relative;
  color: #00982D;
}

.tab_nature {
  position: relative;
}

