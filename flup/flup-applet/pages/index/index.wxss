.tab_v_active::after {
  position: absolute;
  content: "";
  height: 3px;
  width: 31px;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 1.5px;
  background: #32AE57;
  z-index: 100;
}


/* 容器 */
.tabWrap {
  flex: 1;
  padding-bottom: 58px;
  width: 100%;
  background-color: #f6f6f6;
}

.noData {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;

}

.noData image {
  width: 160px;
  height: 212px;
}

.home .message-top image {
  width: 20px;
  height: 20px;
  margin-right: 13px;
}

.input-time {
  border-radius: 4px;
  background: #FFFFFF;
  box-sizing: border-box;
  border: 1px solid rgba(205, 205, 205, 0.8);
  height: 29px;
  margin-top: 8px;
}

.unread {
  width: 9px;
  height: 9px;
  background: #FF5500;
  border-radius: 4.5px;
  align-self: flex-start;
  margin-left: 4px;
}

.tui-cards-container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: 100;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
}

.service-evaluation {
  flex: 1;
  height: 387px;
  border-radius: 12px 12px 0px 0px;
  background: #FFFFFF;
  padding: 48rpx 40rpx;
  display: flex;
  flex-direction: column;
}

.cross {
  position: absolute;
  right: 5px;
  top: 0;
  bottom: 0;
  margin: auto 0;
}

.picker-list {
  display: flex;
  padding: 7px;
  background-color: #fff;
}

.picker-item {
  position: relative;
  border-radius: 4px;
  flex: 1;
  height: 29px;
  box-sizing: border-box;
  border: 1px solid rgba(205, 205, 205, 0.8);
  font-size: 15px;
  font-weight: normal;
  letter-spacing: 0.2px;
  color: #111111;
}

.left-icon {
  display: flex;
  align-items: center;
}

.left-icon image {
  width: 16px;
  height: 16px;
}

.remark {
  flex: 1;
  margin: 0 16rpx;
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  height: 36rpx;
  line-height: 36rpx;
  color: #B66F00;
  border: 1px solid #F0A022;
  border-radius: 18rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: left;
}

.unread-messages-num {
  flex-shrink: 0;
  background: #FF5500;
  font-size: 22rpx;
  color: #FFFFFF;
  border-radius: 200rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  width: 48rpx;
  box-sizing: border-box;
}

.total-num {
  position: absolute;
  right: 0;
  top: -10rpx;
}