.healthFileDetail {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.navigatorbar {
  position: relative;
  top: 0;
  width: 750rpx;
  height: 172rpx;
  flex-shrink: 0;
  background-color: #ffffff;
}

.navigatorbar-back {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  left: 40rpx;
  bottom: 20rpx;
}

.conversation-title {
  position: absolute;
  width: 350rpx;
  height: 88rpx;
  line-height: 56rpx;
  font-size: 36rpx;
  color: #666;
  bottom: 0;
  left: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
}

.healthFile {
  flex: 1;
  min-height: 200px;
  background-size: contain;
  position: relative;
  overflow-y: auto;
}

.healthFile::before {
  content: '';
  display: table;
}

.healthFile .topMenu {
  z-index: 99;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 44px;
  line-height: 44px;
  font-size: 18px;
  color: #111111;
  letter-spacing: 0.2px;
  text-align: center;
  background: #fff;
  border-bottom: 1px solid #e2e2e2;
}

.healthFile .userInfo {
  position: relative;
}

.healthFile .userInfo .title {
  position: absolute;
  top: 40px;
  left: 20px;
  font-family: 苹方-简;
  font-size: 20px;
  font-weight: 500;
  line-height: 24px;
  letter-spacing: 0.25px;
  color: #ffffff;
}

.healthFile .userInfo .title .type {
  font-family: 苹方-简;
  font-size: 14px;
  font-weight: normal;
  line-height: 17px;
  letter-spacing: 0.17px;
  color: #ffffff;
  margin-top: 12px;
}

.healthFile .userInfo {
  position: relative;
  font-size: 0;
}

.healthFile .userInfo image {
  width: 100%;
}

.healthFile .hfBtns {
  position: relative;
  top: -40px;
  padding-bottom: 14px;
  background: #ffffff;
  box-shadow: 0 6px 12px 0 rgba(0, 0, 0, 0.08);
  border-radius: 4px;
  overflow: hidden;
  border-radius: 24px 24px 0px 0px;
}

.healthFile .hfBtns .docInfo {
  padding: 33px 20px 10px 20px;
  color: #111;
  letter-spacing: 0.2px;
  border-bottom: 1px solid #e2e2e2;
  font-family: 苹方-简;
  font-size: 14px;
  font-weight: normal;
  line-height: 17px;
  color: #333333;
}

.healthFile .hfBtns .docInfo .short {
  width: 3px;
  height: 16px;
  border-radius: 1.5px;
  background: #32ae57;
  float: left;
  margin-right: 10px;
}

.healthFile .hfBtns .docInfo .span {
  float: right;
  font-family: ArialMT;
  font-size: 14px;
  font-weight: normal;
  line-height: 17px;
  letter-spacing: 0.2px;
  color: #333333;
}
.healthFile .hfBtns .medInfo {
  padding: 10px 20px;
}
.healthFile .hfBtns .medInfo .p {
  
  line-height: 20px;
  font-size: 14px;
  color: #666666;
}
