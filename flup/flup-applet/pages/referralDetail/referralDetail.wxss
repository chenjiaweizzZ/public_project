/* pages/referralDetail/referralDetail.wxss */
.referral-detail {
  width: 100vw;
  height: 100vh;
  background-color: #F4F5F9;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.refuse-content {
  background-color: #fff7f3;
  padding: 10px;
  color: #ff7b35;
}

.navigatorbar {
  position: sticky;
  top: 0;
  width: 750rpx;
  height: 172rpx;
  flex-shrink: 0;
  background: #FFFFFF;
  z-index: 999;
}

.navigatorbar-back {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  left: 40rpx;
  bottom: 20rpx;
}

.conversation-title {
  position: absolute;
  width: 350rpx;
  height: 88rpx;
  line-height: 56rpx;
  font-size: 36rpx;
  color: #000000;
  bottom: 0;
  left: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
}

.deta1l {
  flex: 1;
  overflow-y: scroll;
}

.deta1l-box {
  margin-bottom: 10px;
  background-color: #FFFFFF;
}

.deta1l-title {
  height: 46px;
  padding-left: 14px;
  display: flex;
  align-items: center;
  font-size: 16px;
  font-weight: 600;
  line-height: 19px;
  letter-spacing: 0.2px;
  color: #333333;
}

.deta1l-content {
  height: 46px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0px 14px;
  font-size: 16px;
  font-weight: normal;
  line-height: 19px;
  letter-spacing: 0.2px;
  color: #333333;
}

.deta1l-left {
  min-width: 100px;
}

.autoHeight {
  height: auto;
}

.deta3l-content {
  display: flex;
  padding: 0px 14px;
  font-size: 16px;
  font-weight: normal;
  line-height: 19px;
  letter-spacing: 0.2px;
  color: #333333;
}

.deta3l-left {
  min-width: 60px;
}

.deta3l-images{
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-around; */
}

.deta3l-left2 {
  height: 46px;
  display: flex;
  align-items: center;
  min-width: 60px;
}

.deta3l-images image {
  width:160rpx;
  height: 160rpx;
  margin-left: 10rpx;
}


.deta2l-content {
  /* height: 46px; */
  display: flex;
  align-items: center;
  padding: 0px 14px 14px;
  font-size: 16px;
  font-weight: normal;
  line-height: 19px;
  letter-spacing: 0.2px;
  color: #333333;
}

.deta3l-text {
  display: flex;
  align-items: center;
  padding: 14px 14px 14px;
}

.btnGroup {
  /* position: fixed;
  right: 0;
  bottom: 0;
  left: 0; */
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 58px;
  z-index: 100;
  background-color: #fff;
}

.btnRefuse {
  border-radius: 100px;
  opacity: 1;
  box-sizing: border-box;
  border: 1px solid #DD3535;
  color: #DD3535;
  flex: 1;
  height: 100%;
  width: 100%;
  margin: 8px 6px 8px 14px;
  height: 42px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-weight: 500;
  line-height: 19px;
  text-align: center;
  letter-spacing: 0px;
  color: #FF0000;
}

.agree {
  border-radius: 100px;
  opacity: 1;
  box-sizing: border-box;
  background: #32AE57;
  font-size: 16px;
  font-weight: 500;
  line-height: 19px;
  text-align: center;
  letter-spacing: 0px;
  color: #FFFFFF;
  flex: 1;
  height: 100%;
  width: 100%;
  margin: 8px 6px 8px 14px;
  height: 42px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.popup-content {
  box-sizing: border-box;
  padding: 0 14px;
}

.popup-content .title {
  margin-top: 12px;
  text-align: center;
  font-size: 20px;
  font-weight: 700;
  line-height: 22px;
  letter-spacing: 0.2px;
  color: #111111;
}

.popup-content .content-input {
  width: 100%;
  /* height: 321px; */
  border-radius: 8px;
  margin-top: 15px;
  padding: 20px 14px;
  box-sizing: border-box;
  background: #FFFFFF;
  display: flex;
}

.popup-content .content-input .input-title {
  flex-shrink: 0;
  margin-right: 14px;
}

.popup-content .content-input textarea {
  box-sizing: border-box;
  border: 1px solid #D4D4D4;
  padding: 10px 12px;
  width: 100%;
  /* height: 281px; */
}

.content-footer {
  box-sizing: border-box;
  display: flex;
  height: 68px;
  padding: 8px 14px;
  background: #FFFFFF;
  width: 100%;
  margin-top: 12px;
}

.confirm {
  background: #32AE57;
  height: 34px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 15px;
  font-weight: 600;
  line-height: 20px;
  text-align: center;
  letter-spacing: 0.2px;
  color: #FFFFFF;
  border-radius: 100px;
}

.referral-detail .van-field__label {
  font-size: 16px;
  font-weight: normal;
  letter-spacing: 0.2px;
  color: #333333;
}

.referral-detail .van-field__placeholder {
  font-size: 16px;
}