.tab_v_active::after {
  position: absolute;
  content: "";
  height: 3px;
  width: 31px;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 1.5px;
  background: #32AE57;
  z-index: 100;
}


/* 容器 */
.tabWrap {
  flex: 1;
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
  padding-bottom: 58px;
}

.sw1per-left {
  width: 100px;
  background: #F6F6F6;
}

.referral-examine .sw1per-right {
  width: 100%;
  height: 100%;
  padding: 11px 18px;
  overflow: auto;
  background-color: #ffffff;
}

.referral-examine .referralDetailItem {
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  padding-left: 18px;
  border-radius: 10px;
  width: 100%;
  box-sizing: border-box;
  border: 1px solid #8BAA96;
  height: 50px;
}

.referral-examine .head {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  background-color: #32AE57;
  display: flex;
  justify-content: center;
  align-items: center;
}

.referral-examine .patientName {
  font-size: 15px;
  font-weight: 500;
  line-height: 19px;
  letter-spacing: 0.2px;
  color: #111111;
  margin-left: 16px;
}

.sw1per-content {
  width: 100%;
  height: 100%;
  display: flex;
}


.van-sidebar-item--selected {
  border-color: #32AE57 !important;
}

.van-sidebar {
  width: 100px !important;
}

.noData {
  width: 100%;
  height: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.noData image {
  width: 160px;
  height: 212px;
}

