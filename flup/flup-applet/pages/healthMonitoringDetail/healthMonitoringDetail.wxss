/* pages/healthMonitoringDetail/healthMonitoringDetail.wxss */
.healthMonitoringDetail{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: #f6f6f6;
}

.navigatorbar {
  position: relative;
  top: 0;
  width: 750rpx;
  height: 172rpx;
  flex-shrink: 0;
  /* background: linear-gradient(149deg, #3BC56E 16%, #36B765 75%); */
  background: #fff;
}

.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.info {
  height: 44px;
  line-height: 44px;
  padding: 0 12px;
  display: flex;
  background: linear-gradient(277deg, #32AE57 1%, #46CD6E 96%);
  font-family: PingFang SC;
  font-size: 15px;
  font-weight: 500;
  text-align: right;
  letter-spacing: 0.2px;
  color: #FFFFFF;
}
.info .middle{
  margin: 0 14px;
}
.navigatorbar-back {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  left: 40rpx;
  bottom: 20rpx;
}

.conversation-title {
  position: absolute;
  width: 350rpx;
  height: 88rpx;
  line-height: 56rpx;
  font-size: 36rpx;
  color: #111;
  bottom: 0;
  left: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
}

/* tab */
.tab_box {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1px solid #f6f6f6;
  /* margin-bottom: 30rpx; */
}

.tabs_v {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
}

.tab_v {
  width: 50%;
  text-align: center;
}

.tab_txt {
  border-bottom: 2px solid transparent;
  padding-bottom: 14px;
  color: #999999;
}

.tab_v_active {
  border-bottom: 2px solid #36B765;
  color: #36B765;
  font-weight: bold;
}
.current{
  padding: 16px 12px;
  color: #333333;
  font-size: 17px;
  background: #fff;
  margin-bottom: 12px;
}
.current .short{
  width: 3px;
  height: 16px;
  border-radius: 1.5px;
  opacity: 1;
  background: #32AE57;
  display: inline-block;
  margin-right: 8px;
}
.current .value{
  float: right;
  font-family: PingFang SC;
  font-size: 28px;
  font-weight: 500;
  line-height: 34px;
  text-align: right;
  letter-spacing: 0.35px;
  color: #00982D;
  display: inline-block;
}
.current .value .unit{
  font-size: 14px;
  font-weight: normal;
  line-height: 17px;
  letter-spacing: 0.17px;
  color: #666666;
  display: inline-block;
}
/* 容器 */
.tabWrap {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.main-content{
  background: #fff;
  
}
.main-content .echarts{
  width: 100%;
  height: 340px;
}
.main-content .echarts .canvas{
  width: 100%;
  height: 100%;
}