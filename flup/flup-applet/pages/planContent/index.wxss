.plan-content {
  width: 100vw;
  height: 100vh;
  background-color: #F4F5F9;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.navigatorbar {
  position: relative;
  top: 0;
  width: 750rpx;
  height: 172rpx;
  flex-shrink: 0;
  background: #FFFFFF;
}

.navigatorbar-back {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  left: 40rpx;
  bottom: 20rpx;
}

.conversation-title {
  position: absolute;
  width: 350rpx;
  height: 88rpx;
  line-height: 56rpx;
  font-size: 36rpx;
  color: #000000;
  bottom: 0;
  left: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
}

.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.plan-content-list {
  flex: 1;
  overflow-y: hidden;
}

.plan-content-list .item {
  box-sizing: border-box;
  width: 100%;
  height: 108rpx;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  padding: 0 30rpx;
  border-bottom: 1px solid #cccccc;
}

.title {
  margin-left: 38rpx;
  margin-right: 20rpx;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.detail {
  flex-shrink: 0;
}

.detail image {
  width: 32rpx;
  height: 32rpx;
}

.footer {
  height: 100rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.cancel,.confirm {
  width: 334rpx;
  height: 84rpx;
  box-sizing: border-box;
  border: 1px solid #CDCDCD;
  border-radius: 200rpx;
  text-align: center;
  line-height: 84rpx;
  color: #666666;
  font-size: 32rpx;
}

.footer .confirm {
  background: #32AE57;
  color: #FFFFFF;
  border: none;
}

.left-icon image {
  width: 16px;
  height: 16px;
}