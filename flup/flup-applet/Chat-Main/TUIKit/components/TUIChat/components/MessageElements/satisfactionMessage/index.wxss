.text-message {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.text-message .title {
  color: #999999;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.text-message .content {
  /* margin-top: 30rpx; */
  width: 540rpx;
  height: 100rpx;
  box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.2);
  background: #FFFFFF;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.border {
  margin: 6rpx;
  height: 88rpx;
  box-sizing: border-box;
  border: 1px solid #A7D8B5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  padding: 0 28rpx 0 8rpx;
}

.border image {
  width: 84rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.border .satisfaction {
  color: #111111;
  font-size: 32rpx;
  font-weight: 700;
  flex: 1;
  text-align: left;
  margin-right: 34rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.border .see {
  font-size: 24rpx;
  color: #017925;
  display: flex;
  align-items: center;
}

.see-icon {
  margin-left: 12rpx;
  width: 22rpx;
  position: relative;
}

.see-icon image {
  position: absolute;
  margin-right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.see-icon .icon2 {
  left: 0rpx;
}
