.video-message {
  width: 150px;
  height: 110px;
  max-width: 60vw;
  position: relative;
}
.video-box {
  width: 100%;
  height: 100%;
  z-index: -1;
}
.my-video {
  border-radius: 10px;
}

.video-message .image {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60rpx;
  height: 60rpx;
  transform: translate(-50%,-50%);
  /* background-color: pink; */
}
