.tui-cards-container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: 100;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
}

.service-evaluation {
  flex: 1;
  height: 587px;
  border-radius: 12px 12px 0px 0px;
  background: #FFFFFF;
  padding: 48rpx 40rpx;
  display: flex;
  flex-direction: column;
}

.select-doctor {
  flex: 1;
  display: flex;
  overflow: hidden;
}

.select-doctor .sidebar{
  overflow-y: auto;
}

.select-doctor .main {
  flex: 1;
  overflow-y: auto;
}
.select-doctor .item {
  height: 60px;
  line-height: 60px;
  padding: 0 28px 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.add-tree {
  flex: 1;
  overflow-y: auto;
}

.header {
  height: 44px;
  position: relative;
  text-align: center;
}

.header .title {
  font-size: 18px;
  font-weight: 700;
  color: #111111;
}

.header image {
  position: absolute;
  right: 0;
  width: 22px;
  height: 22px;
}

.van-sidebar-item--selected {
  border-color: #32AE57 !important;
}