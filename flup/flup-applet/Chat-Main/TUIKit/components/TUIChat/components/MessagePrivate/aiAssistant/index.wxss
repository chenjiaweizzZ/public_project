.tui-cards-container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: 100;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
}

.service-evaluation {
  flex: 1;
  height: 582rpx;
  border-radius: 12px 12px 0px 0px;
  background: #FFFFFF;
  padding: 26rpx 40rpx;
  display: flex;
  flex-direction: column;
}

.van-sidebar-item--selected {
  border-color: #32AE57 !important;
}

.control {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 108rpx;
  color: #111111;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  border-bottom: 1px solid #E2E2E2;
}

.remark {
  font-size: 24rpx;
  color: #4B825B;
}

.goBack {
  position: relative;
  width: 100%;
  text-align: center;
  margin-bottom: 66rpx;
}

.goBack image {
  position: absolute;
  top: 0;
  right: 0;
  width: 44rpx;
  height: 44rpx;
}

.title {
  color: #111111;
  font-size: 36rpx; 
  font-weight: 600;
}