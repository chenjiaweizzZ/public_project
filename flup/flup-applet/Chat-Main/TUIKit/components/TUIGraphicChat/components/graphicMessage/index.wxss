.text-message {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.text-message .content {
  /* margin-top: 30rpx; */
  width: 540rpx;
  /* height: 100rpx; */
  box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.2);
  background: #FFFFFF;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.text-message .content .content-title {
  display: flex;
  justify-content: space-between;
  background: linear-gradient(174deg, #DCF0E1 15%, #FFFFFF 65%);
  padding: 12px;
  align-items: center;
}

.content-title-left {
  font-size: 16px;
  font-weight: 500;
  letter-spacing: 0.2px;
  color: #00982D;
}

.content-title-right {
  display: flex;
  align-items: center;
}

.content-desc {
  padding-bottom: 10px;
}

.content-desc-title {
  display: flex;
  align-items: center;
  padding: 0 12px;
  font-size: 14px;
  font-weight: normal;
  letter-spacing: 0.2px;
  color: #637669;
}



.content-desc-text {
  font-size: 14px;
  font-weight: normal;
  letter-spacing: 0.2px;
  color: #111111;
  text-align: left;
  padding: 5px 12px 0px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}