.custom-item-text {
  font-size: 10px;
  letter-spacing: 0;
  font-weight: 500;
}

.custom-tab {
  position: absolute;
  z-index: 9;
  bottom: 0;
  left: 0;
  right: 0;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.custom-tab .custom-box {
  display: flex;
  cursor: pointer;
  background: #FFFFFF;
  border-top: 1px solid #eeeeee;
  box-shadow: 0px 0px 8px 0px rgba(215, 215, 215, 0.5);
}

.custom-tab .custom-box .custom-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 8px 0;
  color: #C7CED7;
}

.custom-tab .custom-box .custom-item.active {
  color: #00982D;
}

.custom-tab .custom-box .custom-item .custom-item-image {
  width: 22px;
  height: 22px;
  margin-bottom: 2rpx;
  display: inline-block;
}

.custom-logo {
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 64px;
  height: 64px;
  border-radius: 64px;
  /* border-top: 1px solid #eeeeee;s */
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.custom-logo .custom-logo-image {
  width: 56px;
  height: 56px;

}